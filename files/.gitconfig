[add-interactive]
    useBuiltin = false
[alias]
    a = add --verbose
    cm = commit --verbose
    co = checkout
    d = diff
    ds = diff --staged
    f = pull
    graph = log --graph --all --decorate --stat --date=iso
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    p = push
    r = reset
    s = status -s
    stats = shortlog -sn --all --no-merges
    tags = log --no-walk --tags --decorate=full
[core]
    autocrlf = input
    editor = nvim
    pager = delta
[delta]
    light = false
    navigate = true
    side-by-side = true
[diff]
    colorMoved = default
    tool = code
    wordRegex=.
[difftool "code"]
    cmd = code --wait --diff $LOCAL $REMOTE
[format]
    pretty = format:%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s
[include]
    path = ~/.gitconfig.local
[interactive]
    diffFilter = delta --color-only
[log]
    date = relative
[merge]
    conflictstyle = diff3
    tool = code
[push]
    default = simple
[pull]
    rebase = true
[push]
    default = current
[color "status"]
    added = green
    changed = yellow
    untracked = red
