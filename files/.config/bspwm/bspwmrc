#! /bin/sh

# Hotkey listener
killall -q sxhkd &
sxhkd &

# Boot polybar
killall -q polybar
~/scripts/polybar_launch.sh &

####
### Reset any previously registered external monitors
# bspc monitor DP-1 -r &&
# bspc monitor DP-2 -r &&
# bspc monitor HDMI-1 -r &&
# bspc monitor HDMI-2 -r &&
# bspc monitor eDP-1 -r

#####
### Single screen
# bspc monitor eDP-1 -d 1 2 3 4 5

####
### Left side laptop screen, top HDMI, bottom external usb-c
# bspc monitor eDP-1 -d 1 2 3
# bspc monitor DP-2 -d 4 5
# bspc monitor DP-1 -d 6

####
### Left side USB-C display, right side laptop screen
# bspc monitor eDP-1 -d 1 2 3
# bspc monitor DP-2 -d 4 5

####
### Right side external HDMI
bspc monitor eDP-1 -d 1 2 3
bspc monitor HDMI-2 -d 4 5

# Borders
bspc config border_width         3
bspc config focused_border_color "#98C379"
bspc config window_gap           2

# Misc
bspc config split_ratio 0.52
bspc config borderless_monocle true
bspc config gapless_monocle true
bspc config single_monocle true
bspc config focus_follows_pointer true
bspc config pointer_follows_focus true
bspc config top_padding 0

bspc rule -a Emacs state=tiled
