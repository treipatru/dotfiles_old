# ZSH settings
export EDITOR=/usr/bin/nvim
export HISTFILE="$HOME/.history"
export HISTSIZE=500000
export KEYTIMEOUT=1
export SAVEHIST=$HISTSIZE
export TERM="xterm-256color"

# External config files
export BAT_CONFIG_PATH=$HOME/.config/bat/config
export PATH=$PATH:$HOME/.config/rofi/scripts
export RIPGREP_CONFIG_PATH="$HOME/.config/rg/ripgreprc"
export STARSHIP_CONFIG=~/.config/starship/starship.toml

# XDG paths
GRIM_DEFAULT_DIR="$HOME/tmp"
XDG_DESKTOP_DIR="$HOME/"
XDG_DOCUMENTS_DIR="$HOME/tmp"
XDG_DOWNLOAD_DIR="$HOME/tmp"
XDG_MUSIC_DIR="$HOME/music"
XDG_PICTURES_DIR="$HOME/images"
XDG_TEMPLATES_DIR="$HOME/"
XDG_VIDEOS_DIR="$HOME/videos"

# PATHs
export PATH="$PATH:$HOME/.cargo/bin"
export PATH="$PATH:$HOME/.local/bin"
export PATH="$PATH:$HOME/.local/bin/kubectl"
export PATH="$PATH:$HOME/bin"
export PATH="$PATH:$HOME/go/bin"

# GPG
export SOPS_GPG_EXEC=/usr/bin/gpg2

# 1pass SSH agent
export SSH_AUTH_SOCK=~/.1password/agent.sock

# Activate BuildKit in Docker builder
export DOCKER_BUILDKIT=1
# Force docker-compose to use Docker-cli builder instead of Python wrapper
export COMPOSE_DOCKER_CLI_BUILD=1

# OS dependent configs
if [[ "$OSTYPE" == "darwin21.0" ]]; then
    # NVM
    export NVM_DIR=~/.nvm
    source $(brew --prefix nvm)/nvm.sh
fi
