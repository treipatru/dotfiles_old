[include]
  path = ~/.gitconfig.local
[core]
  autocrlf = input
  editor = vim
[push]
  default = simple
[pull]
  rebase = true
[alias]
  a = add
  cl = clean
  co = checkout
  graph = log --graph --all --decorate --stat --date=iso
  local = log @{u}..
  localdiff = diff --word-diff @{u}..
  r = reset
  s = status
  stats = shortlog -sn --all --no-merges
  wd = diff --word-diff
[log]
  date = relative
[format]
  pretty = format:%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s
