[include]
    path = ~/.gitconfig.local
[core]
    autocrlf = input
    editor = vim
[push]
    default = simple
[pull]
    rebase = true
[alias]
    s = status
    c = checkout
    stats = shortlog -sn --all --no-merges
    wd = diff --word-diff
    recap = log --all --oneline --no-merges --author=<andrei.mocanca@mon-avocat.fr>
    today = log --since=00:00:00 --all --no-merges --oneline --author=<andrei.mocanca@mon-avocat.fr>
    graph = log --graph --all --decorate --stat --date=iso
    local = log @{u}..
    localdiff = diff --word-diff @{u}..
[log]
    date = relative
[format]
    pretty = format:%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s
